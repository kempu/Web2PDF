{
  "manifest_version": 3,
  "name": "Web to PDF",
  "version": "1.0",
  "description": "Save a full website as a PDF, preserving its design.",
  "permissions": [
    "activeTab",
    "scripting",
    "debugger",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Web to PDF - Click to save current page as PDF",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/jspdf.umd.min.js",
        "lib/html2canvas.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
